<form action="{{ path('app_login') }}" method="post">

    <div class="form-group my-3">
        <label class="mb-2" for="username">Email</label>
        <input class="form-control" type="email" id="username" name="email" value="{{
            last_username | default(false) ? last_username : ''
        }}" />
    </div>

    <div class="form-group my-3">
        <label class="mb-2" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" />
    </div>

    <div class="form-check my-3">
        <input class="form-check-input" type="checkbox" id="remember-me" name="_remember_me">
        <label class="form-check-label" for="remember-me">
            Remember me
        </label>
    </div>

    <input type="hidden" name="csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="d-flex justify-content-end">
        <button type="submit" class=" btn btn-primary">Login</button>
    </div>

</form>

{% if error | default(false) %}
<div class="alert alert-danger my-3">{{
    error.messageKey|trans(error.messageData, 'security')
    }}
</div>
{% endif %}