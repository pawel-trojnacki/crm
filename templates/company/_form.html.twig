<div>
    {{ form_start(form) }}

    <div class="row">

        <div class="col-4">
            {{form_row(form.name)}}
        </div>
        <div class="col-4">
            {{form_row(form.industry)}}
        </div>
        <div class="col-4">
            {{form_row(form.website)}}
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            {{form_row(form.country)}}
        </div>
        <div class="col-4">
            {{form_row(form.city)}}
        </div>
        <div class="col-4">
            {{form_row(form.address)}}
        </div>
    </div>

    <input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}" />

    <div class="text-end">
        <button type="submit" class="btn btn-primary">{{ buttonText }}</button>
    </div>

    {{form_end(form)}}

</div>