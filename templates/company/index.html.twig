{% extends 'base.html.twig' %}

{% block title %}Companies{% endblock %}

{% block body %}

{{ include('layout/_heading.html.twig', {title: 'Companies'}) }}

<div class="d-flex justify-content-between align-items-start my-4">

    {{ include('partials/_filter-form.html.twig', {
        base_path: 'app_company_index',
        filter_addons: 'company/_filter-form-addons.html.twig'
    }) }}

    <a href="{{ path('app_company_create', {slug: workspace.slug}) }}" class="btn btn-primary">
        Create company
    </a>

</div>

<table class="table table-hover" style="min-width: 700px;">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Industry</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for company in pager %}
        <tr>
            <td>{{company.name | title}}</td>           
             
            {% if company.industry %}
                <td>{{company.industry.name}}</td>
            {% else %}
                <td>&#9866</td>
            {% endif %}

            {% if company.country %}
                <td>{{company.country.name}}</td>
            {% else %}
                <td>&#9866</td>
            {% endif %}

            {% if company.city %}
                <td>{{company.city | title}}</td>
            {% else %}
                <td>&#9866</td>
            {% endif %}

            <td>
                <div class="d-flex">
                    <a href="{{ path('app_company_show', {
                        slug: company.slug
                    }) }}" class="icon-button">
                        <i class="bi-eye-fill"></i>
                    </a>
                    <a href="{{ path('app_company_edit', {
                        slug: company.slug
                    }) }}" class="icon-button">
                        <i class="bi-pencil-fill"></i>
                    </a>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% if pager|length > 25 %}
<div class="my-4">
    {{pagerfanta(pager)}}
</div>
{% endif %}

{% endblock %}