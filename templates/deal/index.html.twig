{% extends 'base.html.twig' %}

{% block title %}Deals{% endblock %}

{% block heading %}Deals{% endblock %}

{% block body %}

{{ include('partials/_filter-form.html.twig', {
base_path: 'app_deal_index',
filter_addons: 'deal/_filter-form-addons.html.twig'
}) }}

{{ include('partials/_results-header.html.twig', {
create_path: 'app_deal_create',
button_text: 'Add deal',
csv_path: 'app_deal_csv'
}) }}

{% if pager|length > 0 %}

<ul class="cards-grid-secondary">
    {% for deal in pager %}
    {{ include('partials/_deal-card.html.twig', { deal: deal }) }}
    {% endfor %}
</ul>

{% else %}

{{ include('partials/_no-results-alert.html.twig') }}

{% endif %}


{% if pager|length > 12 %}
<div class="my-4">
    {{pagerfanta(pager)}}
</div>
{% endif %}

{% endblock %}