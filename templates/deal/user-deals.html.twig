{% extends 'base.html.twig' %}

{% set username = user.firstName ~ ' ' ~ user.lastName | title %}

{% block title %}
{{username}} deals
{% endblock %}

{% block heading %}

{% if is_user_page %}
Deals assigned to you
{% else %}
Deals assigned to {{username}}
{% endif %}

{% endblock %}

{% block body %}

<section>

    <div class="d-flex justify-content-between align-items-end my-4">

        {{ include('partials/_filter-form.html.twig', {
        base_path: 'app_deal_user_deals',
        clear_slug: user.slug,
        filter_addons: 'deal/_filter-form-addons.html.twig'
        }) }}

        <a href="{{ path('app_deal_create', {slug: app.user.workspace.slug})
    }}" class="btn btn-primary">
            Add deal
        </a>

    </div>

    {% if pager|length > 0 %}

    <ul class="cards-grid-secondary">
        {% for deal in pager %}
        {{ include('partials/_deal-card.html.twig', { deal: deal }) }}
        {% endfor %}
    </ul>

    {% else %}

    {{ include('partials/_no-results-alert.html.twig') }}

    {% endif %}

    {% if pager|length > 12 %}
    <div class="my-4">
        {{pagerfanta(pager)}}
    </div>
    {% endif %}
</section>


{% endblock %}