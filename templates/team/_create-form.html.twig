{{form_start(form)}}

    <div class="row">
        <div class="col-md-8">

            <div class="row">
                <div class="col-md-6">
                    {{form_row(form.firstName)}}
                </div>
                <div class="col-md-6">
                    {{form_row(form.lastName)}}
                </div>
            </div>

            {{form_row(form.email)}}

            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.plainPassword.first) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.plainPassword.second) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            {{form_row(form.role)}}
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        {% if button_text | default(false) %}
            {{button_text}}
        {% else %}
            Save user
        {% endif %}
    </button>

{{form_end(form)}}