{{ form_start(form) }}

<div class="row">

	<div class="col-md-8">
		{{ form_row(form.name) }}
		<div class="row">
			<div class="col-md-6">
				{{ form_row(form.importance) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.contact) }}
			</div>
		</div>
	</div>

	<div class="col-md-4">
		{{ form_row(form.beginAt) }}
		{{ form_row(form.endAt) }}
	</div>

</div>

<div class="d-flex justify-content-end">
	<button type="submit" class="btn btn-primary">
		{{ button_text | default(false) ? button_text : 'Save meeting' }}
	</button>
</div>

{{ form_end(form) }}
