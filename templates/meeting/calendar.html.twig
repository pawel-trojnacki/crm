{% extends 'base.html.twig' %}

{% block title %}
	Meetings
{% endblock %}

{% block heading %}
	Meetings
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between mb-4">

		<div class="card">
			<div class="card-body d-flex">
				{% for name, id in importance_options %}
					{{ include('partials/_importance-item.html.twig', {
				item_text: name ~ ' importance',
				item_color: importance_colors[id],
			}) }}
				{% endfor %}
			</div>
		</div>

		<div class="d-flex flex-column justify-content-center">
			<a href="{{ path('app_meeting_create', { slug: app.user.workspace.slug }) }}" class="btn btn-primary">
				Add meeting
			</a>
		</div>

	</div>

	<div id="calendar-holder" data-events-url="{{ path('fc_load_events') }}"></div>
{% endblock %}
